  <script defer>
    function navBurger() {
        var burger = document.getElementById('nav-toggle');
        var menu = document.getElementById('navbarMenuHeroC');
        burger.addEventListener('click', function() {
            burger.classList.toggle('is-active');
            menu.classList.toggle('is-active');
        });
    }
    navBurger()


  </script>
  <script>
    let carpoools;


    var request = new Request("/api/users", {
        method: "GET",
        headers: new Headers({
          Accept: 'application/json',
          'Content-Type': 'application/json',
        })
      });
      fetch(request)
        .then((response) => response.json())
        .then((data) => {
          carpoools = data;
          for (let k = 0; k < carpoools.length; k++) {
            console.log(carpoools[k])
            console.log(k)
            if(carpoools[k].privacy == false){
              document.getElementById("people").innerHTML += `<tr><th>` + carpoools[k].firstName + ``+ ' ' + ``+ carpoools[k].lastName + `</th><td><a href="mailto:` + carpoools[k].email + `">` + carpoools[k].email + `</a></td></tr>`
            }
            else{
              continue;
            }
          }
        })
    
    
  </script>
